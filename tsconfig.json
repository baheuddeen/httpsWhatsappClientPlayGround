{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2015",
    "noImplicitAny": true,
    "allowJs": true,
    "outDir": "dist/",
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "useUnknownInCatchVariables": false,

    "useDefineForClassFields": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,

    "isolatedModules": true,
  },
  "exclude": [
    "historic",
    "node_modules",
    "dist"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "types.ts",
    "main.ts",
    "main.ts"
  ],
  "files": [
    "src/main.ts"
  ],
  "ts-node": {
    "files": true
  },
}
